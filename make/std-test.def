	@echo "  Environment"
	@echo "  -----------"
	@echo "             source tree : $(BLD_ROOT)"
	@echo "        operating system : $(PLATFORM_ID)"
	@echo "            build target : $(TARGET_ID)"
	@echo "               C compiler: $(CC_ID) as $(CC)"
