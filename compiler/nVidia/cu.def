#
# Definitions for the nVidia CUDA compiler
#
    CUCC_ID = nVidia
#
# The name of the binary
#
    COMPILER_CUCC_NAME = nvcc
    COMPILER_CUCC_CC_NAME = /usr/bin/gcc
#
# Command line options
#
    COMPILER_CUCC_FLAGS = 
    COMPILER_CUCC_INCLUDES = $(DIR_COMPILER)/$(CUCC_ID)
    COMPILER_CUCC_DEFINES = CUCC_ID="$(CUCC_ID)"

    COMPILER_CUCC_SOFLAGS = -fPIC
#
# Optimization flags
    CUCC_OPT_FLAGS = -O3 -funroll-loops
    CUCC_DEBUG_FLAGS = -g     # Debug flags
    CUCC_PROF_FLAGS = -pg     # Profiling flags
#
# When using the C compiler to preprocess
#
    COMPILER_CUCC_PREPROCESS = $(COMPILER_CUCC_NAME) -E
#
# When using the C compiler to make dependencies
#
    COMPILER_CUCC_DEPENDS = $(CUCC) --generate-dependencies
#
# When using the C compiler to link
#
    COMPILER_LCUCC_NAME = $(COMPILER_CUCC_NAME)
    COMPILER_LCUCC_FLAGS =
    COMPILER_LCUCC_LIBPATH =
    COMPILER_LCUCC_SOFLAGS = -shared 
    COMPILER_LCUCC_FORSHARED = 
#
# Clean up
#
    COMPILER_CUCC_CLEAN = 
    COMPILER_CUCC_DISTCLEAN =

#
# end of file
