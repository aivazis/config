  using ::system;
  using ::bsearch;
  using ::qsort;
  using ::abs;
  using ::div;
  using ::labs;
  using ::ldiv;
  using ::mbtowc;
  using ::mblen;
  using ::wctomb;
  using ::mbstowcs;
  using ::wcstombs;
