#
# Definitions for Linux-3.x
#

    PLATFORM_ID = Linux-3.x

# Compiler command line
#
# C
#
    PLATFORM_CC_FLAGS =
    PLATFORM_CC_DEFINES =
    PLATFORM_CC_INCLUDES = $(DIR_PLATFORM)/$(PLATFORM_ID)
    PLATFORM_LCC_FLAGS =
    PLATFORM_LCC_LIBPATH =
#
# cuda
#
    PLATFORM_CUCC_FLAGS =
    PLATFORM_CUCC_DEFINES =
    PLATFORM_CUCC_INCLUDES = $(DIR_PLATFORM)/$(PLATFORM_ID)
    PLATFORM_LCUCC_FLAGS =
    PLATFORM_LCUCC_LIBPATH =

#
# C++
#
    PLATFORM_CXX_FLAGS =
    PLATFORM_CXX_DEFINES =
    PLATFORM_CXX_INCLUDES = $(DIR_PLATFORM)/$(PLATFORM_ID)
    PLATFORM_LCXX_FLAGS =
    PLATFORM_LCXX_LIBPATH =
#
# FORTRAN
#
    PLATFORM_F77_FLAGS =
    PLATFORM_F77_DEFINES =
    PLATFORM_F77_INCLUDES = $(DIR_PLATFORM)/$(PLATFORM_ID)
    PLATFORM_LF77_FLAGS =
    PLATFORM_LF77_LIBPATH =
#
# OS-specific definitions
#
    ARFLAGS = rvU
    RANLIB = true
    RANFLAGS =

    SYSLIB =

#
# X, Xt, Motif
#
    LIB_SOCKET = 

    LIB_X = -lX11 -lm $(LIB_SOCKET)
    LIB_XT = -lXmu -lXt $(LIB_X)
    LIB_MOTIF = -lXaw $(LIB_XT)
