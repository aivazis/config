#
# Irix settings for MPI
#

MPI_INCLUDES = 
MPI_LIBS = -lmpi
MPI_LIBPATH = 

# Don't include MPI C++ bindings on Irix platform.

TARGET_CXX_DEFINES += MPI_NO_CPPBIND

